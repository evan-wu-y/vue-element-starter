{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^vue",
    "<THIRD_PARTY_MODULES>",
    "@/views/(.*)",
    "@/components/(.*)",
    "@/assets/(.*)",
    "@/composables/(.*)",
    "@/store/(.*)",
    "@/utils/(.*)",
    "@/api/(.*)",
    "@/(.*)"
  ]
}
